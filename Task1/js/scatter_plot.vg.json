{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 500,
    "width": 500,
    "title": "shark attack times per year",
    "data": {
        "url": "https://raw.githubusercontent.com/BoyangYu1589/Fit3179Week10Homework/main/data/fatal_shark_attacks.csv"
    },
    "mark": "circle",
    "encoding": {
        "x": {
            "field": "Confirmed",
            "type": "quantitative",
            "title": "Confirmed Cases"
        },
        "y": {
            "field": "Deaths",
            "type": "quantitative"
        },
        "color": {
            "field": "Continent",
            "type": "nominal"
        },
        "size": {
            "field": "Population",
            "type": "quantitative"
        }
    }
}